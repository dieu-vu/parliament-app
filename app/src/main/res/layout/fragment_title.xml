<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    tools:context=".title.TitleFragment">

    <data>
        <variable
            name="TitleViewModel"
            type="com.example.parliamentmemberapp.title.TitleViewModel" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingStart="16dp"
        android:gravity="center"
        android:paddingEnd="16dp">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_logo_of_the_parliament_of_finland"
            />


        <TextView
            android:id="@+id/view_info_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="16dp"
            android:text="@string/welcome_text"
            />

        <Button
            android:id="@+id/search_btn"
            android:text="@string/search_btn"
            style="@style/view_buttons" />

        <Button
            android:id="@+id/view_party_list"
            style="@style/view_buttons"
            android:text="@string/view_party_list" />

    </LinearLayout>

</layout>